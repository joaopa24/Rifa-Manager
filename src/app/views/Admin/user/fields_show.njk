<div class="user fields show">
                <div class="item">
                    <p>Nome</p>
                    <div>
                        <input type="text" name="name" value="{{user.name}}" placeholder="Digite o nome completo">
                    </div>
                </div>
                <div class="item">
                    <p>Email</p>
                    <div>
                        <input type="text" name="email" value="{{user.email}}" placeholder="Digite o Email" onblur="Validate.apply(this,'isEmail')">
                    </div>
                </div>
                 <div class="item">
                    <p>Senha</p>
                    <div>
                        <input type="password" name="password" placeholder="Digite a sua Senha">
                    </div>
                </div>
                <div class="item">
        <p>CPF</p>
        <div>
            <input type="text" name="cpf" value="{{user.cpf}}" placeholder="Digite o CPF" maxlength="11">
        </div>
    </div>
    <div class="item">
        <p>Celular</p>
        <div>
            <input type="text" name="celular" value="{{user.celular}}" placeholder="Digite o celular" maxlength="11">
        </div>
    </div>

                <input type="hidden" name="is_admin" value="{{user.is_admin}}">
</div>