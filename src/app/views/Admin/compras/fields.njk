<div class="fields">
    <div class="item">
        <p>ID do Cliente</p>
        <div>
            <input type="number" name="client_id" value="{{ compra.client_id }}" min="1" required>
        </div>
    </div>

    <div class="item">
        <p>ID do Bilhete</p>
        <div>
            <input type="number" name="bilhete_id" value="{{ compra.bilhete_id }}" min="1" required>
        </div>
    </div>

    <div class="item">
        <p>Valor</p>
        <div>
            <input type="number" name="amount" step="0.01" value="{{ compra.amount }}" min="0" required>
        </div>
    </div>

    <div class="item">
        <p>Status</p>
        <div>
            <select name="status" required>
                <option value="true" {% if compra.status == true %}selected{% endif %}>Aprovado</option>
                <option value="false" {% if compra.status == false %}selected{% endif %}>Rejeitado</option>
            </select>
        </div>
    </div>

    <!-- Adicione mais campos se necessÃ¡rio -->
    <!-- Campo oculto para o ID da compra se estiver editando -->
    {% if compra.compra_id %}
        <input type="hidden" name="compra_id" value="{{ compra.compra_id }}">
    {% endif %}
</div>
