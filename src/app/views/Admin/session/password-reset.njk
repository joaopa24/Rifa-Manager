{% extends "Admin/session/layout.njk" %}
{% block content %}
<div class="session_content">
    <div class="session_form">
        <form action="/admin/users/password-reset" method="post">
            <div class="session_header">
                <p>Nova Senha</p>
            </div>
            <div class="fields">
                <div class="item">
                    <p>Email</p>
                    <div>
                        <input type="text" name="email" value="{{user.email}}" placeholder="Digite seu email" onblur="Validate.apply(this, 'isEmail')"></div>
                    </div>
                    <div class="item">
                        <p>Nova senha</p>
                        <div>
                            <input type="text" name="password" value="" placeholder="Digite sua senha">
                        </div>
                    </div>

                    <div class="item">
                        <p>Repetir senha</p>
                        <div>
                            <input type="text" name="passwordRepeat" value="" placeholder="Digite sua senha">
                        </div>
                    </div>

                    <input type="hidden" name="token" value="{{token}}">
                    
                    <div class="session_buttons">
                        <button type="submit">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
{% endblock%}